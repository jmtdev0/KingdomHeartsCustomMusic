<Window x:Class="KingdomHeartsCustomMusic.InstructionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instructions" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF252526" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <TextBlock Text="How to Use Kingdom Hearts Music Patcher" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" Foreground="#FF007ACC"/>
            <TextBlock TextWrapping="Wrap" FontSize="14">
                1. Select the game tab (Kingdom Hearts I or II).
                2. Assign your custom audio files to the tracks you want to replace.
                3. Use the quick actions to assign one file to multiple tracks if needed.
                4. Save your configuration for future use.
                5. Click 'Generate Music Patch' to create your patch file.
                6. Apply the patch to your game using the provided patch manager.
                7. Enjoy your custom soundtrack!
            </TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="13" Margin="0,20,0,0" Foreground="#FFAAAAAA">
                For more help, check the documentation or contact the developer.
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</Window>