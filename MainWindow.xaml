                                <!-- Tracks Section BBS -->
                                <Border Background="#FF2D2D30" CornerRadius="8" Padding="20">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="🎼 Music Tracks" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,15"
                                                       Foreground="#FF007ACC"
                                                       VerticalAlignment="Center"/>
                                        

                                        <!-- Sorting ComboBox -->
                                        <TextBox x:Name="TrackSearchTextBoxBBS"
                                                 Grid.Column="1"
                                                 Width="220"
