                                        <ComboBox x:Name="TrackSortComboBoxReCOM"
                                                  Grid.Column="2"
                                                  Width="220"
                                                  Margin="15,0,0,15"
                                                  SelectedIndex="0"
                                                  VerticalAlignment="Center"
                                                  Style="{StaticResource ModernComboBoxStyle}"
                                                  SelectionChanged="TrackSortComboBoxReCOM_SelectionChanged">
                                            <ComboBoxItem Content="Chronological order"/>
                                            <ComboBoxItem Content="Alphabetical order"/>
                                        </ComboBox>
                                        <CheckBox x:Name="ShowAssignedOnlyReCOM"
                                                  Grid.Column="3"
                                                  Content="Hide empty tracks"
                                                  Foreground="White"
                                                  Margin="15,0,0,15"
                                                  VerticalAlignment="Center"
                                                  Visibility="Collapsed"
                                                  Checked="ShowAssignedOnlyReCOM_CheckedChanged"
                                                  Unchecked="ShowAssignedOnlyReCOM_CheckedChanged"/>

                                        </Grid>

                                        <StackPanel x:Name="WorldListPanelReCOM" Orientation="Vertical"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </TabItem>

                <TabItem Header="Dream Drop Distance" Style="{StaticResource ModernTabItemStyle}">
                    <Border Background="#FF252526" CornerRadius="0,8,8,8" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- Quick Actions Section (DDD) -->
                                <Border Background="#FF2D2D30" 
                                        CornerRadius="8" 
                                        Padding="20" 
                                        Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="🎵 Quick Actions" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,0,15"
                                                   Foreground="#FF007ACC"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox x:Name="SelectAllCheckBoxDDD"
                                                      Grid.Column="0"
                                                      Content="Select All Tracks"
                                                      VerticalAlignment="Center"
                                                      Checked="SelectAllCheckBox_Checked"
                                                      Unchecked="SelectAllCheckBox_Unchecked"
                                                      ToolTip="Select or deselect all tracks"
                                                      Foreground="White"
                                                      FontWeight="SemiBold"
                                                      AutomationProperties.Name="Select All Tracks"/>

                                            <Button Grid.Column="1"
                                                    Content="🎶 Assign Song to Selected Tracks"
                                                    HorizontalAlignment="Left"
                                                    Click="AssignToSelectedButton_Click"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    ToolTip="Select a single audio file and assign it to all checked tracks"
                                                    AutomationProperties.Name="Assign Song to Selected Tracks"/>
                                            

                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Tracks Section DDD -->
                                <Border Background="#FF2D2D30" CornerRadius="8" Padding="20">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="🎼 Music Tracks" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,15"
                                                       Foreground="#FF007ACC"
                                                       VerticalAlignment="Center"/>
                                        <!-- Sorting ComboBox -->
                                        <TextBox x:Name="TrackSearchTextBoxDDD"
                                                 Grid.Column="1"
                                                 Width="220"
                                                 Margin="15,0,0,15"
                                                 Style="{StaticResource ModernTextBoxStyle}"
                                                 ToolTip="Filter tracks by name"
                                                 Tag="Filter tracks..."
                                                 TextChanged="TrackSearchTextBoxDDD_TextChanged"/>

                                        <ComboBox x:Name="TrackSortComboBoxDDD"
                                                  Grid.Column="2"
                                                  Width="220"
                                                  Margin="15,0,0,15"
                                                  SelectedIndex="0"
                                                  VerticalAlignment="Center"
                                                  Style="{StaticResource ModernComboBoxStyle}"
                                                  SelectionChanged="TrackSortComboBoxDDD_SelectionChanged">
                                            <ComboBoxItem Content="Chronological order"/>
                                            <ComboBoxItem Content="Alphabetical order"/>
                                        </ComboBox>
                                        <CheckBox x:Name="ShowAssignedOnlyDDD"
                                                  Grid.Column="3"
                                                  Content="Hide empty tracks"
                                                  Foreground="White"
                                                  Margin="15,0,0,15"
                                                  VerticalAlignment="Center"
                                                  Visibility="Collapsed"
                                                  Checked="ShowAssignedOnlyDDD_CheckedChanged"
                                                  Unchecked="ShowAssignedOnlyDDD_CheckedChanged"/>

                                        </Grid>

                                        <StackPanel x:Name="WorldListPanelDDD" Orientation="Vertical"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- Footer Section -->
            <Border Grid.Row="3" 
                    Background="#FF2D2D30" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Patch Name Input -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Content="📦 Patch Name:" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Target="{Binding ElementName=PatchNameTextBox}"/>
                        <TextBox x:Name="PatchNameTextBox"
                                 Width="250"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 ToolTip="Enter a custom name for your patch"/>
                    </StackPanel>

                    <!-- Progress Text -->
                    <TextBlock x:Name="ProgressText"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="15"
                               Foreground="LightSteelBlue"
                               AutomationProperties.LiveSetting="Polite"
                               Text=""/>

                    <!-- Generate Patch Button -->
                    <Button x:Name="GeneratePatchButton"
                            Grid.Column="2"
                            Content="✨ Generate Music Patch (KH1)"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="GeneratePatchButton_Click"
                            FontSize="14"
                            Padding="20,12"
                            ToolTip="Create your custom Kingdom Hearts music patch"
                            AutomationProperties.Name="{Binding Content, RelativeSource={RelativeSource Self}}"/>

                    <!-- Apply Patch Button (Red) -->
                    <Button Grid.Column="3"
                            Content="🚀 Apply Patch"
                            Background="#FFB71C1C"
                            Foreground="White"
                            Style="{StaticResource ModernButtonStyle}"
                            FontSize="14"
                            Padding="20,12"
                            Margin="10,0,0,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="ApplyPatchButton_Click"
                            ToolTip="Apply patch using KHPCPatchManager.exe"
                            AutomationProperties.Name="Apply Patch"/>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
