<Window x:Class="KingdomHeartsCustomMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kingdom Hearts Music Patcher"
        Height="700" Width="1000"
        Background="#FF1A1A1D"
        FontFamily="Segoe UI" 
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF0099FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0066CC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="#FF404040"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A1A1D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF007ACC"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF606060"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabControl Style -->
        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Modern TabItem Style -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8,8,0,0"
                                Margin="2,0,2,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF404040"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title and Config Buttons -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🏰🤍" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Kingdom Hearts Music Patcher" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#FF007ACC"/>
                        <TextBlock Text="With all due respect to Yoko Shimomura." 
                                   FontSize="13" 
                                   Foreground="#FFAAAAAA"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Config Buttons -->
                <Button Grid.Column="1"
                        Content="💾 Save Config"
                        Margin="10,0,0,0"
                        Click="SaveConfigButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        ToolTip="Save current song assignments"/>

                <Button Grid.Column="2"
                        Content="📂 Load Config"
                        Margin="10,0,0,0"
                        Click="LoadConfigButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        ToolTip="Load previously saved assignments"/>

                <Button Grid.Column="3"
                        Content="📋 View Logs"
                        Margin="10,0,0,0"
                        Click="ViewLogsButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        ToolTip="Open the folder containing application logs"/>
            </Grid>

            <!-- Separator Line -->
            <Border Grid.Row="1" 
                    Height="1" 
                    Background="#FF404040" 
                    Margin="0,15,0,0"/>
        </Grid>
        
        <!-- Main Content -->
        <TabControl x:Name="MainTabControl"
                    Grid.Row="1"
                    Style="{StaticResource ModernTabControlStyle}">

            <TabItem Header="Kingdom Hearts I" Style="{StaticResource ModernTabItemStyle}">
                <Border Background="#FF252526" CornerRadius="0,8,8,8" Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- Action Buttons Section -->
                            <Border Background="#FF2D2D30" 
                                    CornerRadius="8" 
                                    Padding="20" 
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="🎵 Quick Actions" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"
                                               Foreground="#FF007ACC"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Button Grid.Column="0"
                                                Content="🎶 Assign Song to All Selected Tracks"
                                                HorizontalAlignment="Left"
                                                Click="AssignToSelectedButton_Click"
                                                Style="{StaticResource ModernButtonStyle}"
                                                ToolTip="Select a single audio file and assign it to all checked tracks"/>
                                        
                                        <CheckBox x:Name="SelectAllCheckBox"
                                                  Grid.Column="1"
                                                  Content="Select All Tracks"
                                                  VerticalAlignment="Center"
                                                  Checked="SelectAllCheckBox_Checked"
                                                  Unchecked="SelectAllCheckBox_Unchecked"
                                                  ToolTip="Select or deselect all tracks"
                                                  Foreground="White"
                                                  FontWeight="SemiBold"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Tracks Section -->
                            <Border Background="#FF2D2D30" CornerRadius="8" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="🎼 Music Tracks" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"
                                               Foreground="#FF007ACC"/>
                                    
                                    <StackPanel x:Name="WorldListPanelKH1" Orientation="Vertical"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="Kingdom Hearts II" Style="{StaticResource ModernTabItemStyle}">
                <Border Background="#FF252526" CornerRadius="0,8,8,8" Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Border Background="#FF2D2D30" CornerRadius="8" Padding="20">
                            <StackPanel>
                                <TextBlock Text="🎼 Music Tracks" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,15"
                                           Foreground="#FF007ACC"/>
                                
                                <StackPanel x:Name="WorldListPanelKH2" Orientation="Vertical"/>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer Section -->
        <Border Grid.Row="2" 
                Background="#FF2D2D30" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Patch Name Input -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦 Patch Name:" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                    <TextBox x:Name="PatchNameTextBox"
                             Width="250"
                             Style="{StaticResource ModernTextBoxStyle}"
                             ToolTip="Enter a custom name for your patch"/>
                </StackPanel>

                <!-- Apply Existing Patch Button -->
                <Button Grid.Column="2"
                        Content="📂 Select &amp; Apply Patch"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="ApplyPatchButton_Click"
                        FontSize="14"
                        Padding="15,12"
                        Margin="0,0,10,0"
                        ToolTip="Select a patch file and game installation folder to apply an existing Kingdom Hearts patch"/>

                <!-- Generate Patch Button -->
                <Button Grid.Column="3"
                        Content="✨ Generate Music Patch"
                        Style="{StaticResource ModernButtonStyle}"
                        Click="GeneratePatchButton_Click"
                        FontSize="14"
                        Padding="20,12"
                        ToolTip="Create your custom Kingdom Hearts music patch from the selected tracks"/>
            </Grid>
        </Border>
    </Grid>
</Window>
