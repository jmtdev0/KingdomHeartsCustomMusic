<Window x:Class="KingdomHeartsCustomMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KH Music Patcher"
        Height="600" Width="800"
        Background="#FF2D2D30"
        FontFamily="Segoe UI" Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🎵 Kingdom Hearts Music Patcher"
                   FontSize="24" FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="WorldListPanel" Orientation="Vertical">
                <!-- Aquí se generarán dinámicamente las entradas por mundo -->
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="✨ Generate Patch"
                Height="50" FontSize="16" Margin="0 20 0 0"
                Background="#FF007ACC" Foreground="White"
                BorderBrush="Transparent"
                HorizontalAlignment="Center" Padding="20 5"
                Cursor="Hand"
                Click="GeneratePatchButton_Click"/>
    </Grid>
</Window>
