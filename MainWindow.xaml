<Window x:Class="KingdomHeartsCustomMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KH Music Patcher"
        Height="600" Width="800"
        Background="#FF2D2D30"
        FontFamily="Segoe UI" Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🎵 Kingdom Hearts Music Patcher"
                   FontSize="24" FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <TabControl 
                    x:Name="tabControl"
                    Grid.Row="1"
                    Background="#FF2D2D30"
                    BorderBrush="Gray"
                    FontSize="14">
            <TabItem Header="Kingdom Hearts I">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="WorldListPanelKH1" Orientation="Vertical" Margin="10"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Kingdom Hearts II">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="WorldListPanelKH2" Orientation="Vertical" Margin="10"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <Button Grid.Row="2" Content="✨ Generate Patch"
                Height="50" FontSize="16" Margin="0 20 0 0"
                Background="#FF007ACC" Foreground="White"
                BorderBrush="Transparent"
                HorizontalAlignment="Center" Padding="20 5"
                Cursor="Hand"
                Click="GeneratePatchButton_Click"/>
    </Grid>
</Window>
