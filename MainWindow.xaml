<Window x:Class="KingdomHeartsCustomMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KH Music Patcher"
        Height="600" Width="800"
        Background="#FF2D2D30"
        FontFamily="Segoe UI" Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🧩 Encabezado: título + botones de configuración -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 🎵 Título -->
                <TextBlock Grid.Column="0"
                   Text="🎵 Kingdom Hearts Music Patcher"
                   FontSize="24" FontWeight="Bold"
                   VerticalAlignment="Center"/>

                <!-- 💾 Botón Guardar Config -->
                <Button Grid.Column="1"
                Content="💾 Save Config"
                Margin="10 0 0 0"
                Click="SaveConfigButton_Click"
                Background="#FF007ACC"
                Foreground="White"
                BorderBrush="Transparent"
                Padding="10 5"
                Cursor="Hand"
                ToolTip="Save current song assignments"/>

                <!-- 📂 Botón Cargar Config -->
                <Button Grid.Column="2"
                Content="📂 Load Config"
                Margin="10 0 0 0"
                Click="LoadConfigButton_Click"
                Background="#FF007ACC"
                Foreground="White"
                BorderBrush="Transparent"
                Padding="10 5"
                Cursor="Hand"
                ToolTip="Load previously saved assignments"/>
            </Grid>

        </Grid>
        
        <TabControl x:Name="MainTabControl"
                    Grid.Row="1"
                    Background="#FF2D2D30"
                    BorderBrush="Gray"
                    FontSize="14">

            <TabItem Header="Kingdom Hearts I">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">

                        <!-- Botón general -->
                        <Button Content="🎶 Buscar canción para las seleccionadas"
                        Margin="0 0 0 10"
                        HorizontalAlignment="Left"
                        Click="AssignToSelectedButton_Click"
                        Background="#FF007ACC"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Padding="10 5"
                        Cursor="Hand"
                        ToolTip="Select a single audio file and assign it to all checked tracks."
                        />

                        <!-- CheckBox "Select All" -->
                        <CheckBox x:Name="SelectAllCheckBox"
                        Content="Select All"
                        HorizontalAlignment="Left"
                        Margin="0 0 0 10"
                        Checked="SelectAllCheckBox_Checked"
                        Unchecked="SelectAllCheckBox_Unchecked"
                        ToolTip="Select or deselect all tracks"/>

                        <!-- Lista de pistas (rellenada desde C#) -->
                        <StackPanel x:Name="WorldListPanelKH1" Orientation="Vertical"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <TabItem Header="Kingdom Hearts II">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="WorldListPanelKH2" Orientation="Vertical" Margin="10"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- TextBox para nombre del patch -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0 20 0 0">
            <TextBlock Text="Nombre del patch:"
                       VerticalAlignment="Center"
                       Margin="0 0 10 0"/>
            <TextBox x:Name="PatchNameTextBox"
                     Width="200"
                     VerticalAlignment="Center"
                     Margin="0 0 20 0"
                     Background="#FF1E1E1E"
                     Foreground="White"
                     BorderBrush="Gray"/>
            <Button Content="✨ Generate Patch"
                    Height="40"
                    Width="160"
                    Background="#FF007ACC"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Click="GeneratePatchButton_Click"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
