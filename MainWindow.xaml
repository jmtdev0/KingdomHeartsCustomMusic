<Window x:Class="KingdomHeartsMusicPatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kingdom Hearts Music Patcher"
        Height="700" Width="1175"
        Background="#FF1A1A1D"
        FontFamily="Segoe UI" 
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Icon="Assets\app.ico">

    <Window.Resources>
        <!-- Focus visual style used by multiple controls -->
        <Style x:Key="FocusRingStyle" TargetType="Control">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Rectangle StrokeThickness="2"
                                   StrokeDashArray="2,2"
                                   Stroke="#80FFFFFF"
                                   SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusRingStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF0099FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0066CC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="#FF404040"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF404040"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A1A1D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style with placeholder support via Tag -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusRingStyle}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!-- Ensure predictable glyph layout to avoid half-pixel caret offset -->
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <!-- Align caret (ContentHost) and Placeholder via Margin equal to Padding -->
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                <TextBlock x:Name="Placeholder"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="#80FFFFFF"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF007ACC"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF606060"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusRingStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    MinHeight="36">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="32"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Margin="8,0,0,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"/>
                                    <ToggleButton x:Name="DropDownToggle"
                                                  Grid.Column="1"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Focusable="False"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                        <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                              Fill="White"
                                              Width="8" Height="4"
                                              Margin="0,0,8,0"
                                              VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="#FF2D2D30" BorderBrush="#FF404040" BorderThickness="1" CornerRadius="6">
                                    <ItemsPresenter/>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF007ACC"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF606060"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add focus ring to CheckBox without altering visuals -->
        <Style TargetType="CheckBox">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusRingStyle}"/>
        </Style>

        <!-- Modern TabControl Style -->
        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Modern TabItem Style -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8,8,0,0"
                                Margin="2,0,2,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF404040"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#FF2D2D30" Foreground="White">
            <MenuItem Header="Instructions" Click="InstructionsMenuItem_Click" AutomationProperties.Name="Instructions"/>
            <MenuItem Header="Credits" Click="CreditsMenuItem_Click" AutomationProperties.Name="Credits"/>
            <MenuItem Header="Update" Click="UpdateMenuItem_Click" AutomationProperties.Name="Update"/>
        </Menu>

        <!-- Main Content -->
        <Grid Margin="25" DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title and Config Buttons -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🏰🤍" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Kingdom Hearts Music Patcher" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="#FF007ACC"/>
                            <TextBlock Text="With all due respect to Yoko Shimomura." 
                                       FontSize="13" 
                                       Foreground="#FFAAAAAA"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Config Buttons -->
                    <Button Grid.Column="1"
                            Content="💾 Save Config"
                            Margin="10,0,0,0"
                            Click="SaveConfigButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            ToolTip="Save current song assignments"
                            AutomationProperties.Name="Save Config"/>

                    <Button Grid.Column="2"
                            Content="📂 Load Config"
                            Margin="10,0,0,0"
                            Click="LoadConfigButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            ToolTip="Load previously saved assignments"
                            AutomationProperties.Name="Load Config"/>
                </Grid>

                <!-- Separator Line -->
                <Border Grid.Row="1" 
                        Height="1" 
                        Background="#FF404040" 
                        Margin="0,15,0,0"/>
            </Grid>
            
            <!-- Main Content -->
            <TabControl x:Name="MainTabControl"
                        Grid.Row="2"
                        Style="{StaticResource ModernTabControlStyle}">

                <TabItem Header="Kingdom Hearts I" Style="{StaticResource ModernTabItemStyle}">
                    <Border Background="#FF252526" CornerRadius="0,8,8,8" Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- Action Buttons Section -->
                                <Border Background="#FF2D2D30" 
                                        CornerRadius="8" 
                                        Padding="20" 
                                        Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="🎵 Quick Actions" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,0,15"
                                                   Foreground="#FF007ACC"/>
                                        
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <CheckBox x:Name="SelectAllCheckBox"
                                                      Grid.Column="0"
                                                      Content="Select All Tracks"
                                                      VerticalAlignment="Center"
                                                      Checked="SelectAllCheckBox_Checked"
                                                      Unchecked="SelectAllCheckBox_Unchecked"
                                                      ToolTip="Select or deselect all tracks"
                                                      Foreground="White"
                                                      FontWeight="SemiBold"
                                                      AutomationProperties.Name="Select All Tracks"/>

                                            <Button Grid.Column="1"
                                                    Content="🎶 Assign Song to Selected Tracks"
                                                    HorizontalAlignment="Left"
                                                    Click="AssignToSelectedButton_Click"
                                                    Style="{StaticResource ModernButtonStyle}"
                                                    ToolTip="Select a single audio file and assign it to all checked tracks"
                                                    AutomationProperties.Name="Assign Song to Selected Tracks"/>
                                            

                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Tracks Section KH1 -->
                                <Border Background="#FF2D2D30" CornerRadius="8" Padding="20">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="🎼 Music Tracks" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Margin="0,0,0,15"
                                                       Foreground="#FF007ACC"
                                                       VerticalAlignment="Center"/>
                                            <TextBox x:Name="TrackSearchTextBoxKH1"
                                                     Grid.Column="1"
                                                     Width="220"
                                                     Margin="15,0,0,15"
                                                     Style="{StaticResource ModernTextBoxStyle}"
                                                     ToolTip="Filter tracks by name"
                                                     Tag="Filter tracks..."
                                                     TextChanged="TrackSearchTextBoxKH1_TextChanged"/>
                                            <ComboBox x:Name="TrackSortComboBoxKH1"
                                                      Grid.Column="2"
                                                      Width="220"
                                                      Margin="15,0,0,15"
                                                      SelectedIndex="0"
                                                      VerticalAlignment="Center"
                                                      Style="{StaticResource ModernComboBoxStyle}"
                                                      SelectionChanged="TrackSortComboBoxKH1_SelectionChanged">
                                                <ComboBoxItem Content="Chronological order"/>
                                                <ComboBoxItem Content="Alphabetical order"/>
                                            </ComboBox>
                                            <CheckBox x:Name="ShowAssignedOnlyKH1"
                                                      Grid.Column="3"
                                                      Content="Hide empty tracks"
                                                      Foreground="White"
                                                      Margin="15,0,0,15"
                                                      VerticalAlignment="Center"
                                                      Visibility="Collapsed"
                                                      Checked="ShowAssignedOnlyKH1_CheckedChanged"
                                                      Unchecked="ShowAssignedOnlyKH1_CheckedChanged"/>
                                        </Grid>
                                        <StackPanel x:Name="WorldListPanelKH1" Orientation="Vertical"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </TabItem>

