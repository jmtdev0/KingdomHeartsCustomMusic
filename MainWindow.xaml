<Window x:Class="KingdomHeartsCustomMusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KH Music Patcher"
        Height="600" Width="800"
        Background="#FF2D2D30"
        FontFamily="Segoe UI" Foreground="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🎵 Kingdom Hearts Music Patcher"
                   FontSize="24" FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <TabControl 
                    x:Name="MainTabControl"
                    Grid.Row="1"
                    Background="#FF2D2D30"
                    BorderBrush="Gray"
                    FontSize="14">
            <TabItem Header="Kingdom Hearts I">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="WorldListPanelKH1" Orientation="Vertical" Margin="10"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Kingdom Hearts II">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="WorldListPanelKH2" Orientation="Vertical" Margin="10"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Margin="0 20 0 0" HorizontalAlignment="Center">
            <TextBlock Text="Patch name:" FontSize="14" Margin="0 0 0 5" HorizontalAlignment="Left"/>
            <TextBox x:Name="PatchNameTextBox" Width="200" Height="30"
             Background="White" Foreground="Black"
             BorderBrush="Gray" BorderThickness="1"
             Padding="5" Margin="0 0 0 10"
             HorizontalAlignment="Left"/>
            <Button Content="✨ Generate Patch"
            Height="50" FontSize="16"
            Background="#FF007ACC" Foreground="White"
            BorderBrush="Transparent"
            Padding="20 5"
            Cursor="Hand"
            Click="GeneratePatchButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
