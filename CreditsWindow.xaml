<Window x:Class="KingdomHeartsCustomMusic.CreditsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credits" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF252526" Foreground="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <TextBlock Text="Credits &amp; Thanks" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" Foreground="#FF007ACC"/>
            <TextBlock TextWrapping="Wrap" FontSize="14">
                Developed by jmtdev0
                
                Special thanks to:
                - The Kingdom Hearts modding community
                - Contributors to open source audio libraries
                - Everyone who provided feedback and support
            </TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="13" Margin="0,20,0,0" Foreground="#FFAAAAAA">
                This tool is not affiliated with Square Enix or Disney. For educational and modding purposes only.
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</Window>