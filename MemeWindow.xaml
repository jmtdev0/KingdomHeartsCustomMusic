<Window x:Class="KingdomHeartsCustomMusic.MemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="Credits" Height="420" Width="560"
        MaxHeight="480" MaxWidth="640"
        WindowStartupLocation="CenterOwner"
        Background="#FF1A1A1D" Foreground="White"
        ResizeMode="CanResize">
    <Border Margin="10" CornerRadius="10" Background="#FF2D2D30" Padding="10">
        <Grid>
            <Image x:Name="MemeImage"
                   Stretch="Uniform"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   SnapsToDevicePixels="True"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Grid>
    </Border>
</Window>